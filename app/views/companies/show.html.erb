<div class = "sh-container">
<h1><%= @company.name %></h1>
<h2> Menu </h2>
<div>
  <form class="sh-searchform">
    <input type="text" class="search" placeholder=" SEARCH: 'Pasta/Cuba Libre/Eggs'">
    <ul class = "sh-suggestions">
      <li>filter for component</li>
      <li>or a plate, drink, etc</li>
    </ul>
  </form>
</div>
<div class = "sh-cards row">
<% @menus.each do |menu|  %>
<div class="sh-card col-sm-6 col-md-4 col-xl-2">
  <%= link_to "#{menu.subtitle}", "#", :class => "sh-link" %>
  <p>&#10095;</p>
</div>
<% end %>
</div>
</div>

