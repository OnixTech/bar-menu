<div class = "sh-container">
  <h1><%= @company.name %></h1>
  <h2> Menu </h2><br>
  <div class="sh-searchform">
    <input type="text" name="search" autocomplete=”off” id="sh-input"
    onkeyup="searchbar()" placeholder="Search">
  </div><br>
  <div class = "sh-cards row" id="wrapper">
    <% @menus.each do |menu|  %>
      <div class="sh-card col-sm-6 col-md-4 col-xl-2 list">
        <p><strong><%= menu.subtitle %></strong></p>
        <div class="sh-items">
          <% @items.each do |item|  %>
            <% if item.menu_id == menu.id %>
              <div class='sh-items-li'>
                <div class="sh-items-name">
                  <p class="sh-item-<%= item.id %>"><strong><%= item.name %></p><p class="sh-item-<%= item.id %>">$<%= item.price %></strong></p>
                  <div class="sh-item-input-<%= item.id %>" style="display: none;"><input class="sh-input-name"type="text" autocomplete=”off” placeholder="<%= item.name %>"></div><div class="sh-item-input-<%= item.id %>" style="display: none;"><input class="sh-input-price" type="text" autocomplete=”off” placeholder="<%= item.price %>"></div>
                </div>
                <p class="sh-item-<%= item.id %>"><%= item.description %></p>
                <input class="sh-item-input-<%= item.id %> sh-input-description" type="text" autocomplete=”off” placeholder="<%= item.description %>" style="display: none;">

                <% if current_user == @company.user %>
                  <div class="sh-div-btn-set-item">
                    <button class="sh-btn-set-item sh-btn-edit-<%= item.id %>" onclick="editItem(this)" data-id=<%= item.id %>>EDIT</button>
                    <button class="sh-btn-set-item">DELETE</button>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
          <% if current_user == @company.user %>
            <div class="sh-div-btn-add">
              <button class="sh-btn-add"> ADD </button>
            </div> 
          <% end %>       
      </div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "packs/sh-searchbar" %>
<%= javascript_include_tag "packs/sh-edit-item" %>
