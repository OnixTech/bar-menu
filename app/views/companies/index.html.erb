<div class="cmp-index-container clearfix">
  <h3>INDEX</h3>
  <br>
  <h5>COMPANIES:</h5>
  <hr>
  <div class="cmp-index-cards row">
    <% @company = @company.order(:id) %>
    <% @company.each do |company| %>
      <% if current_user == company.user  %>
        <div class="cmp-index-card-btns col-sm-6 col-md-4 col-xl-1 list">
          <div class="cmp-index-card">
            <a href="<%= company_path(company) %>"class="cmp-index-card-content">
              <div class="cmp-index-card-tittle"> 
                <h4><strong><%= company.name.upcase %></strong></h4>
              </div>
              <div class="cmp-index-card-address">
                <p><%= company.street %> <%= company.number %>, <%= company.post %> <%= company.city %></p>
              </div>
            </a> 
          </div>
          <div class="cmp-index-card-qr">
            <% if company.qr_code == nil %>
              <%= simple_form_for(company) do |f| %>
                <%= f.hidden_field :qr_code, value:"https://fillo.herokuapp.com#{company_path(company)}"%>
                <div class="cmp-index-card-qr-g">
                  <%= f.submit "Generate QR", class:"sh-btn-set-item"%>
                </div>
              <% end %>
            <% else %>
              <div class="cmp-index-card-svg">
                <%= link_to company_qr_path(company_id: company.id) do %>
                  <%= @svg.html_safe %>
                <% end %>
              </div>
            <% end %>
          </div>
          <div class="cmp-index-card-sections-checkbx">
            <div class="cmp-index-card-sections-checkbx-title">
            <p>VISIBLE SECTIONS</p>
            </div>
            <hr>
            <div class="cmp-index-card-sections-checkbx-checkboxes-row">
              <% @menus.each do |menu| %>
                <%= simple_form_for menu, :url => menus_cmUpdate_path(menu), :method => :post do |f| %>  
                  <% if menu.company_id == company.id %>
                      <div class="cmp-index-card-sections-checkbx-checkboxes">
                        <div class="cmp-index-card-sections-checkbx-checkboxes-box-name">
                          <%= f.hidden_field :menu_id, value:menu.id %>
                          <%= f.check_box :visible, value:menu.visible %>
                          <label for="<%= menu.subtitle %>"><p><%= menu.subtitle %></p></label>
                        </div>
                        <div class="cmp-index-card-sections-checkbx-checkboxes-submit">
                          <%= f.submit "CONFIRM", class:"sh-btn-set-item" %>
                        </div>
                      </div>
                  <% end %>
                <% end %>
              <% end %>
            </div>  
            <hr>
          </div>
          <div class="cmp-index-card-set-btns">
            <%= button_to "EDIT", edit_company_path(company), method: :get %>
            <%= button_to "DELETE", company_path(company), method: :delete %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div  class="cmp-index-card-btns-add">
    <a href="<%= new_company_path %>">
      <div class="cmp-index-card-content-add">
        <p>ADD</p>
      </div>
    </a>
  </div> 
  <hr>  
  <div class="cmp-index-users-list-container">
    <% if current_user.role.name == "master"  %>
      <div>
      <p>Users:</p>
      <hr>
      <div class="cmp-index-users-list">
        <% @users.each do |user| %>
          <% if user != current_user %>
            <%= simple_form_for user, :url => users_update_path(user), :method => :post do |f| %>
              <div class="cmp-index-users-list-user-box">
                <%= user.email %>
                <div class="cmp-index-users-list-user-inputs">
                  <div class="cmp-index-users-list-user-inputs-sc">
                    <div class="cmp-index-users-list-user-inputs-sc-select">
                      <%= f.select :role, ["master", "manager", "visitor"], value:user.role %>
                    </div>
                    <div class="cmp-index-users-list-user-inputs-sc-checkbox">
                      <%= f.hidden_field :user_id, value:user.id %>
                      <%= f.check_box :active, id:"active", value:user.active %>
                      <label for="active"><p>Active</p></label>
                    </div>
                  </div>
                  <div class="cmp-index-users-list-user-submit">
                    <%= f.submit "CONFIRM", class:"sh-btn-set-item" %>
                  </div>
                </div>
                <div class="cmp-index-users-list-user-inputs-companies">
                  <% @company.each do |company| %>
                    <% if company.user == user %>
                      <div class="cmp-index-users-list-user-inputs-companies-name">
                        <li><%= company.name %></li>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>
            <% end %><br>
          <% end %>
        <% end %>
      </div>
      <hr>
    <% end %>
    <div class="cmp-index-btn-lgo">
      <%= button_to " Log out ",  destroy_user_session_path, class: "h-btn", method: :get %>
    </div>
    </div>
  </div>
</div>

