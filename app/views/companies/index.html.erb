<div><h1>Index company</h1></div>
<div>
  <p>LIST COMPANIES</p>
  <ul>
    <% @company.each do |company| %>
      <% if current_user == company.user  %>
      <li><%= link_to "#{company.name}", company_path(company) %></li>
      <% end %>
    <% end %>
  </ul>
<div>
  <%= link_to "New", new_company_path, class: "h-btn" %>
</div>
<br>
</div>
<% if current_user.role.name == "master"  %>
  <div>
    <p>Users:</p>
    <% @users.each do |user| %>
      <% if user != current_user %>
        <ul>
          <li><%= user.email %> - <%= user.role.name %> - <%= user.active %></li>
          <% @company.each do |company| %>
            <% if company.user == user %>
              <%= company.name %>
            <% end %>
          <% end %>
          <br>
        </ul>
      <% end %>
    <% end %>
  </div>
<% end %>

